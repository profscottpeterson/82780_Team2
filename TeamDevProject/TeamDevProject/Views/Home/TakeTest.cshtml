@model IEnumerable<TeamDevProject.Models.TestQuestions>;

@{
    ViewData["Title"] = "TakeTest";
}

<h2>TakeTest</h2>

<form asp-action="Check">
    @foreach (var item in Model)
    {
        <h4>@Html.DisplayFor(modelItem => item.Question)</h4>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="@Html.DisplayFor(modelItem => item.QuestionId)" id="@Html.DisplayFor(modelItem => item.QuestionId) + 1" value="1" checked>
            <label class="form-check-label" for="exampleRadios1">
                @Html.DisplayFor(modelItem => item.Answer1)
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="@Html.DisplayFor(modelItem => item.QuestionId)" id="@Html.DisplayFor(modelItem => item.QuestionId) + 2" value="2" checked>
            <label class="form-check-label" for="exampleRadios1">
                @Html.DisplayFor(modelItem => item.Answer2)
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="@Html.DisplayFor(modelItem => item.QuestionId)" id="@Html.DisplayFor(modelItem => item.QuestionId) + 3" value="3" checked>
            <label class="form-check-label" for="exampleRadios1">
                @Html.DisplayFor(modelItem => item.Answer3)
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="@Html.DisplayFor(modelItem => item.QuestionId)" id="@Html.DisplayFor(modelItem => item.QuestionId) + 4" value="4" checked>
            <label class="form-check-label" for="exampleRadios1">
                @Html.DisplayFor(modelItem => item.Answer4)
            </label>
        </div>
    }
    <div class="form-group">
        <input type="submit" value="Check" class="btn btn-default" />
    </div>
</form>

